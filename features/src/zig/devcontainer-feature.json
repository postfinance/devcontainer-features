{
    "id": "zig",
    "version": "0.1.0",
    "name": "Zig",
    "description": "A feature which installs Zig.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "0.13.0",
                "0.12"
            ],
            "default": "latest",
            "description": "The version of Zig to install."
        },
        "versionResolve":{
            "type":"boolean",
            "default": false,
            "description": "Whether to resolve the version automatically."
        },
        "downloadUrlBase": {
            "type": "string",
            "default": "",
            "proposals": [
                "https://mycompany.com/artifactory/ziglang-generic-remote"
            ],
            "description": "The download URL to use for Zig binaries."
        },
        "downloadUrlPath": {
            "type": "string",
            "default": "",
            "description": "The download URL path to use for Zig binaries."
        },
        "versionsUrl": {
            "type": "string",
            "default": "",
            "description": "The URL to fetch the available Zig versions from."
        }
    },
    "containerEnv": {
        "PATH": "/usr/local/zig:${PATH}"
    }
}