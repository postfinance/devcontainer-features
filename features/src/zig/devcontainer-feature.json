{
    "id": "zig",
    "version": "0.2.0",
    "name": "Zig",
    "description": "Installs Zig.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "0.13.0",
                "0.12"
            ],
            "default": "latest",
            "description": "The version of Zig to install."
        },
        "downloadUrl": {
            "type": "string",
            "default": "",
            "proposals": [
                "https://mycompany.com/artifactory/ziglang-generic-remote/download"
            ],
            "description": "The download URL to use for Zig binaries."
        },
        "versionsUrl": {
            "type": "string",
            "default": "",
            "description": "The URL to fetch the available Zig versions from."
        }
    },
    "containerEnv": {
        "PATH": "/usr/local/zig:${PATH}"
    }
}