{
    "id": "node",
    "version": "0.1.0",
    "name": "Node.js",
    "description": "A package which installs Node.js.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "lts",
                "latest",
                "20.11.1",
                "18.19.1"
            ],
            "default": "lts",
            "description": "The version of Node.js to install."
        },
        "versionResolve": {
            "type": "boolean",
            "default": false,
            "description": "Whether to resolve the version automatically."
        },
        "npmVersion": {
            "type": "string",
            "proposals": [
                "included",
                "latest",
                "10.5.0",
                "9.9.3"
            ],
            "default": "included",
            "description": "The version of NPM to install."
        },
        "npmVersionResolve": {
            "type": "boolean",
            "default": false,
            "description": "Whether to resolve the NPM version automatically."
        },
        "yarnVersion": {
            "type": "string",
            "proposals": [
                "none",
                "latest",
                "1.22.22",
                "1.21.1"
            ],
            "default": "none",
            "description": "The version of Yarn to install."
        },
        "yarnVersionResolve": {
            "type": "boolean",
            "default": false,
            "description": "Whether to resolve the Yarn version automatically."
        },
        "pnpmVersion": {
            "type": "string",
            "proposals": [
                "none",
                "latest",
                "9.14.2",
                "9"
            ],
            "default": "none",
            "description": "The version of Pnpm to install."
        },
        "pnpmVersionResolve": {
            "type": "boolean",
            "default": false,
            "description": "Whether to resolve the Pnpm version automatically."
        },
        "downloadUrlBase": {
            "type": "string",
            "default": "",
            "proposals": [
                "https://mycompany.com/artifactory/nodejs-generic-remote"
            ],
            "description": "The download URL to use for Node.js binaries."
        },
        "downloadUrlPath": {
            "type": "string",
            "default": "",
            "description": "The download URL path to use for Node.js binaries."
        },
        "versionsUrl": {
            "type": "string",
            "default": "",
            "description": "The URL to fetch the available Node.js versions from."
        },
        "globalNpmRegistry": {
            "type": "string",
            "default": "",
            "proposals": [
                "https://mycompany.com/artifactory/api/npm/npm/"
            ],
            "description": "The global NPM registry to use."
        }
    }
}